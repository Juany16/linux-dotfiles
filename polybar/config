;secondary = ${xrdb:color1:#222}
;primary = #A1A1A1
;secondary = #505050
alert = #bd2c40
;shade1 = ${xrdb:color3:#222}

[bar/bar1]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 30
;offset-x = 0%
;offset-y = 0%

; Radio para barra flotante
;radius = 5.0
; Radio para barra fija
