;; Calendario
(defwidget time []
    (box :class "date-container" :orientation "h" :space-evenly false :halign "center"
      (label :text "${completeday}    ")
      (button :class "salir" :onclick "eww open date --toggle" " ")
    )
)

(defwidget cal []
  (box :class "cal-box"
       :orientation "v"
       :space-evenly false
    (calendar :class "cal"
              :day {calendar_day ?: "1"}
              :month {calendar_month ?: "1"}
              :year {calendar_year ?: "2023"}
    )
;;    (button :class "botones" :onclick "eww close date" "")
  )
)

(defwidget date []
  (box :class "date"
       :orientation "v"
       :space-evenly false
    (time)
    (cal) 
  )
)

