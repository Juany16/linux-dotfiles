#
# BSPWM HOTKEYS
#

# quit/restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}; notify-send "Bspwm" "La configuracion se reinició correctamente!"

# close and kill
super + q
	bspc node -{c}
                #k
# make sxhkd reload its configuration files:
super + shift + Escape
	pkill -USR1 -x sxhkd; notify-send "Sxhkd" "La configuracion se reinició correctamente!"

#
# MW INDEPENDENT HOTKEYS
#

# program launcher
super + Escape
	rofi -show drun -show-icons
	#@space

super + c
    rofi -show calc -no-show-match -no-sort
#    gnome-calculator

super + v
    rofi -show windowcd

super + shift + t
    rofi -show window

super + F4
  ~/.config/Scripts/powermenu
	#~/.local/bin/powermenu

super + p
    ~/.config/Scripts/elegirAudio.sh
    #pavucontrol

super + w
    ~/.config/Scripts/selectorWifi.sh

super + shift + f
    ~/.config/Scripts/selectorFondos.sh

super + n
    ~/.config/Scripts/rofiNotas.sh
super + shift + c
    ~/.config/Scripts/rofiModConfig.sh

# terminal emulator
super + Return
    kitty
super + shift + Return
    xfce4-terminal
    #bspc rule -a kitty state=floating center=on rectangle=600x400+0+0 && kitty

# Launch file manager
super + e
    kitty -e ranger
super + shift + e
    thunar

super + b
    brave-browser

#super + r
#    nm-connection-editor

#super + v
#    code

super + d
    ~/Documentos/Programación/To-Do-List/Daily-List-MOD/To-Do-List-Final/App/dist/DailyList/DailyList

# Take a screenshot
Print
    xfce4-screenshooter
super + Print
    xfce4-screenshooter -r

super + alt + f
    ~/.config/Scripts/cambiar_fondo.sh; notify-send "Fondo y Tema" "Actualizados aleatoriamente"

# i3lock
super + shift + b
    ~/.config/Scripts/blocki3lock.sh
    #~/.local/bin/blocki3lock.sh
    #i3lock -i "$(cat /tmp/fondo_actual.txt)"

#
# STATE / FLAGS
#

# set the window state
super + {t,f,m}
	bspc node -t {tiled,floating,fullscreen}

#super + {t,shift + t,s,f}
#	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
#super + ctrl + {m,x,y,z}
#	bspc node -g {marked,locked,sticky,private}

#
# FOCUS / SWAP
#

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + shift + {p,h,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous desktop in the current monitor
super + {a,s}
	bspc desktop -f {prev,next}.local
super + shift + {a,s}
    bspc node -d {prev,next}

# focus the last node/desktop
super + {Tab}
	bspc {desktop} -f last
#{grave,} {node,}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# focus the older or newer node in the focus history
#super + {v,n}
#	bspc wm -h off; \
#	bspc node {older,newer} -f; \
#	bspc wm -h on

#
# MOVE / RESIZE
#

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
#super + {Left,Down,Up,Right}
#	bspc node -v {-20 0,0 20,0 -20,20 0}

